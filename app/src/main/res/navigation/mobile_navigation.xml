<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/currentRouteFragment">

    <action
        android:id="@+id/action_global_routesFragment"
        app:destination="@id/routesFragment"/>

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment"/>

    <fragment
        android:id="@+id/currentRouteFragment"
        android:name="betterlifethanksapp.gmail.com.locationWakeUp.ui.currentRoute.CurrentRouteFragment"
        android:label="Current route"
        tools:layout="@layout/current_route_fragment" >
    </fragment>
    <fragment
        android:id="@+id/routesFragment"
        android:name="betterlifethanksapp.gmail.com.locationWakeUp.ui.routes.RoutesFragment"
        android:label="Routes"
        tools:layout="@layout/routes_fragment" >
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="betterlifethanksapp.gmail.com.locationWakeUp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_fragment" />
</navigation>